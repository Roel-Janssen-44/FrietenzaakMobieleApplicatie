<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2D2KrokanteHap.MVVM.Views.OrderPlacedPage"
             xmlns:local="clr-namespace:A2D2KrokanteHap.MVVM.ViewModels">
    <VerticalStackLayout VerticalOptions="FillAndExpand">
        <Grid RowDefinitions="Auto,*,Auto" VerticalOptions="FillAndExpand">

            <!-- First Row with Label -->
            <Label 
                Text="Order is geplaatst!"
                FontSize="24"
                VerticalOptions="Center" 
                FontFamily="Showcard"
                HorizontalOptions="Center"
                Grid.Row="0"
                Margin="0,20,0,20"
            />

            <!-- Second Row with HorizontalStackLayout that should expand -->
            <HorizontalStackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Center" Grid.Row="1">
                <Label 
                    Margin="5,10"
                    Text="Order nummer:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Margin="5,10"
                    Text="{Binding OrderId}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Third Row with Button -->
            <Button
                Grid.Row="2"
                x:Name="ConfirmOrderButton"
                Text="Alle orders bekijken" 
                Margin="16,8,16,24"
                TextColor="{StaticResource White}"
                BackgroundColor="{StaticResource Primary}"
                Command="{Binding Source={RelativeSource AncestorType={x:Type local:OrderPlacedViewModel}}, Path=NavigateBackCommand}"
                HorizontalOptions="Fill" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
