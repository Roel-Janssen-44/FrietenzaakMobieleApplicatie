<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2D2KrokanteHap.MVVM.Views.MapsPage"
             Title="MapsPage">
    <ScrollView>
        
        <VerticalStackLayout Padding="0,50">

            <Label 
                Text="Maps Pagina"
                FontSize="24"
                VerticalOptions="Center" 
                FontFamily="Showcard"
                HorizontalOptions="Center"
                TextColor="{StaticResource Tertiary}"
                Margin="0,32,0,20"
            />


            <Button Text="Navigate" 
                Margin="20"
                BackgroundColor="{StaticResource Primary}" 
                Clicked="OnNavigateButtonClicked" />


            <VerticalStackLayout Margin="20,40">
                <Label x:Name="LocationLabel" HorizontalOptions="Center" Margin="0,10" Text="Location will appear here" FontSize="18" />
                <Button Text="Get Location" Clicked="OnGetLocationClicked" />
            </VerticalStackLayout>


            <VerticalStackLayout Margin="20">
                <Label x:Name="CompassLabel" 
                   Text="Heading: Not Available" 
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
                <Button Text="Start Compass"
                    BackgroundColor="{StaticResource Primary}" 
                    Margin="0,10" Clicked="OnStartCompassClicked" />
                <Button 
                    BackgroundColor="{StaticResource Primary}" 
                    Text="Stop Compass" Clicked="OnStopCompassClicked" />
            </VerticalStackLayout>

            <VerticalStackLayout Margin="20">
                <Label x:Name="FlashlightStatusLabel" 
                    Text="Flashlight is OFF" 
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" />
                <Button 
                    BackgroundColor="{StaticResource Primary}" 
                    Text="Toggle Flashlight" Clicked="OnToggleFlashlightClicked" />
            </VerticalStackLayout>

            <VerticalStackLayout Margin="20">
                <Button Text="Short Buzz" BackgroundColor="{StaticResource Primary}" Clicked="OnShortBuzzClicked" />
                <Button Text="Long Buzz" BackgroundColor="{StaticResource Primary}" Margin="0,10" Clicked="OnLongBuzzClicked" />
                <Button Text="Stop Buzz" BackgroundColor="{StaticResource Primary}" Clicked="OnStopBuzzClicked" />
            </VerticalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
