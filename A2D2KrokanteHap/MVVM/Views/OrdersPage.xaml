<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#fff"
             Padding="0,0"
             x:Class="A2D2KrokanteHap.MVVM.Views.OrdersPage"
             xmlns:local="clr-namespace:A2D2KrokanteHap.MVVM.ViewModels">


    <ContentPage.BindingContext>
        <local:OrdersViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <!-- Logo -->
        <Image
            Source="/logo.png"
            HeightRequest="120"
            Grid.Row="0"
        />

        <ScrollView Grid.Row="2" >
            <VerticalStackLayout >
                <Label 
                    Text="Bestellingen"
                    FontSize="24"
                    VerticalOptions="Center" 
                    FontFamily="Showcard"
                    HorizontalOptions="Start"
                    Grid.Row="1"
                    Padding="16,0"
                    Margin="0,0,0,10"
                />

                <CollectionView 
                        Grid.Row="2"
                        ItemsSource="{Binding CompletedOrders}" 
                    >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#fff">
                                <VerticalStackLayout Spacing="16" >
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0" 
                                           Text="{Binding DateTime, StringFormat='{0:dd-MM-yyyy HH:mm}'}" 
                                           HorizontalOptions="Start" 
                                           VerticalOptions="Center" />
                                        <Label Grid.Column="1" 
                                           Text="{Binding TotalPrice, StringFormat='€{0:0.00}'}" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center" />
                                    </Grid>
                                    <Label Text="{Binding Id, StringFormat='Ordernr: {0}'}"/>
                                    <!-- View Order Button -->
                                    <Button
                                        Text="Bekijken" 
                                        HorizontalOptions="Fill"
                                        TextColor="{StaticResource White}"
                                        BackgroundColor="{StaticResource Secondary}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:OrdersViewModel}}, Path=ViewOrderCommand}"
                                        CommandParameter="{Binding Id}" />
                                    <!-- Reorder Button -->
                                    <Button
                                        Text="Opnieuw bestellen" 
                                        Margin="0,0,0,40"
                                        TextColor="{StaticResource White}"
                                        BackgroundColor="{StaticResource Primary}"
                                        HorizontalOptions="Fill"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:OrdersViewModel}}, Path=ReOrderCommand}"
                                        CommandParameter="{Binding Id}" />

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>



                <Label 
                    Text="Concept bestellingen"
                    FontSize="24"
                    VerticalOptions="Center" 
                    FontFamily="Showcard"
                    HorizontalOptions="Start"
                    Grid.Row="1"
                    Padding="16,0"
                    Margin="0,0,0,10"
                />
                <CollectionView 
                    Grid.Row="2"
                    ItemsSource="{Binding DraftOrders}" 
                >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#fff">
                                <VerticalStackLayout Spacing="16" >
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Grid.Column="0" 
                                           Text="{Binding DateTime, StringFormat='{0:dd-MM-yyyy HH:mm}'}" 
                                           HorizontalOptions="Start" 
                                           VerticalOptions="Center" />
                                        <Label Grid.Column="1" 
                                           Text="{Binding TotalPrice, StringFormat='€{0:0.00}'}" 
                                           HorizontalOptions="End" 
                                           VerticalOptions="Center" />
                                    </Grid>
                                    <Label Text="{Binding Id, StringFormat='Ordernr: {0}'}"/>
                                    <!-- View Order Button -->
                                    <Button
                                        Text="Bekijken" 
                                        HorizontalOptions="Fill"
                                        TextColor="{StaticResource White}"
                                        BackgroundColor="{StaticResource Secondary}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:OrdersViewModel}}, Path=ViewOrderCommand}"
                                        CommandParameter="{Binding Id}" />
                                    <!-- Reorder Button -->
                                    <Button
                                        Text="Opnieuw bestellen" 
                                        Margin="0,0,0,40"
                                        TextColor="{StaticResource White}"
                                        BackgroundColor="{StaticResource Primary}"
                                        HorizontalOptions="Fill"
                                        CommandParameter="{Binding Id}" />

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>