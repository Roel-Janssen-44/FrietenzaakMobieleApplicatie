<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:A2D2KrokanteHap.MVVM.ViewModels"
             x:Class="A2D2KrokanteHap.MVVM.Views.LoginPage">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>



    <ScrollView>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="15">
            <Label 
                Text="Login"
                FontSize="24"
                VerticalOptions="Center" 
                FontFamily="Showcard"
                HorizontalOptions="Center"
                Margin="0,20,0,30"
            />
            <Label 
                Text="Accounts met login:"
                FontSize="24"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
            />
            <Label 
                Text="- Gebruikersnaam: Sjarel"
                FontSize="24"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
            />
            <Label 
                Text="ww: password"
                FontSize="24"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
            />
            <Label 
                Text="- Gebruikersnaam: Pieter"
                FontSize="24"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
            />
            <Label 
                Text="ww: password"
                FontSize="24"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="0,0,0,30"
            />
            <Entry BackgroundColor="White" PlaceholderColor="{StaticResource Secondary}" TextColor="{StaticResource Primary}" Placeholder="Username" Text="{Binding Username}" />
            <Entry BackgroundColor="White" PlaceholderColor="{StaticResource Secondary}" TextColor="{StaticResource Primary}" Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <Button BackgroundColor="{StaticResource Primary}" Text="Login" Command="{Binding LoginCommand}" />
            <Label Text="{Binding Message}" TextColor="Red" HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>

</ContentPage>
