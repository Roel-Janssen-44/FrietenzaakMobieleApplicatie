<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:A2D2KrokanteHap.MVVM.ViewModels"
             x:Class="A2D2KrokanteHap.MVVM.Views.LoginPage">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" BackgroundColor="green" VerticalOptions="CenterAndExpand" Spacing="15">

        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Label Text="{Binding Message}" TextColor="Red" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
